[bar/wide]
monitor = HDMI1
width = 100%
height = 25 
bottom = false
padding-left = 5
padding-right = 5

background = #00FFFFFF
foreground = #FFFFFF

font-0 = FontAwesome:style=Regular:size=14;1
font-2 = Dina:style=Regular:pixelsize=15;1
font-1 = FontAwesome:fontformat=truetype:size=17;1

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

wm-name = topbar

modules-left = i3
modules-center = song
modules-right = coretemps space date

[bar/builtin]
monitor = eDP1
width = 100%
height = 35 
bottom = false
padding-left = 5
padding-right = 5

background = #00FFFFFF
foreground = #FFFFFF

font-0 = FontAwesome:style=Regular:size=15;1
font-2 = Dina:style=Regular:pixelsize=20;1
font-1 = FontAwesome:fontformat=truetype:size=17;1

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

wm-name = topbar

modules-left = i3
modules-center = song
modules-right = wireless-network space date

[module/space]
type = custom/text
content = " | "

[module/wireless-network]
type = internal/network
interface = wlp4s0
; Seconds to sleep between updates
; Default: 1
interval = 5.0

format-connected = <ramp-signal> <label-connected>
format-disconnected = <label-disconnected>

label-connected = %essid% %downspeed:9%
label-connected-foreground = #eefafafa
label-disconnected = not connected
label-disconnected-foreground = #66ffffff

ramp-signal-0 = üò±
ramp-signal-1 = üò†
ramp-signal-2 = üòí
ramp-signal-3 = üòä
ramp-signal-4 = üòÉ
ramp-signal-5 = üòà

[module/date]
type = custom/script
exec = echo "ÔÄó  $(date +'%I:%M  %A %d %B')"
interval = 1

[module/song]
type = custom/script
interval = 2

label = %output:0:45:...%
exec = ~/.config/polybar/mpris.sh
click-left = playerctl next
click-middle = playerctl play-pause

[module/coretemps]
type = custom/script
interval = 1
exec-if = sensors
exec = ~/.config/polybar/tempcores.sh

[module/i3]
type = internal/i3

; Only show workspaces defined on the same output as the bar
;
; Useful if you want to show monitor specific workspaces
; on different bars
;
; Default: false
pin-workspaces = true

; This will split the workspace name on ':'
; Default: false
strip-wsnumbers = true

; Sort the workspaces by index instead of the default
; sorting that groups the workspaces by output
; Default: false
index-sort = true

; Create click handler used to focus workspace
; Default: true
; enable-click = false

; Create scroll handlers used to cycle workspaces
; Default: true
enable-scroll = false

; Wrap around when reaching the first/last workspace
; Default: true
wrapping-scroll = false

; Set the scroll cycle direction 
; Default: true
reverse-scroll = false

; Use fuzzy (partial) matching on labels when assigning 
; icons to workspaces
; Example: code;‚ôö will apply the icon to all workspaces 
; containing 'code' in the label
; Default: false
fuzzy-match = true

; ws-icon-[0-9]+ = label;icon
; NOTE: The label needs to match the name of the i3 workspace
; ws-icon-0 = 1;‚ôö
; ws-icon-1 = 2;‚ôõ
; ws-icon-2 = 3;‚ôú
; ws-icon-3 = 4;‚ôù
; ws-icon-4 = 5;‚ôû
; ws-icon-default = ‚ôü

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-focused = %index%
label-focused-foreground = #3f3f3f
label-focused-background = #ffffff
label-focused-underline = #fba922
label-focused-padding = 3

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-unfocused = %index%
label-unfocused-padding = 3

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-visible = %index%
label-visible-underline = #555555
label-visible-padding = 3

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-urgent = %index%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-padding = 3
